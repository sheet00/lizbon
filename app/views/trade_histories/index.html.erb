<p id="notice"><%= notice %></p>
<h1>Trade Histories</h1>
<table class="table">
  <thead>
    <tr>
      <th>取引日付</th>
      <th>transaction_id</th>
      <th>通貨</th>
      <th>取引区分</th>
      <th>単価</th>
      <th>数量</th>
      <th>約定代金</th>
      <th>手数料</th>
      <th>coin手数料</th>
      <th>order_id</th>
      <th>created_at</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @trade_histories.each do |trade_history| %>
      <tr>
        <td><%= Time.at(trade_history.timestamp.to_i) %></td>
        <td><%= trade_history.transaction_id %></td>
        <td><%= trade_history.currency_pair %></td>
        <td><%= t(trade_history.your_action) %></td>
        <td><%= trade_history.price.to_s(:delimited)  %></td>
        <td><%= trade_history.amount.to_s(:delimited)  %></td>
        <td><%= trade_history.contract_price.to_s(:delimited)  %></td>
        <td><%= trade_history.fee.to_s(:delimited)  %></td>
        <td><%= trade_history.fee_amount.to_s(:delimited)  %></td>
        <td><%= trade_history.order_id %></td>
        <td><%= trade_history.created_at %></td>
        <td><%= link_to 'Show', trade_history %></td>
        <td><%= link_to 'Edit', edit_trade_history_path(trade_history) %></td>
        <td><%= link_to 'Destroy', trade_history, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to 'New Trade History', new_trade_history_path %>