<p id="notice"><%= notice %></p>
<h1>Wallets</h1>
<table class="table">
  <thead>
    <tr>
      <th>Currency type</th>
      <th>Money</th>
      <th>is_loscat</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @wallets.each do |wallet| %>
      <tr>
        <td><%= wallet.currency_type %></td>
        <td><%= wallet.money %></td>
        <td><%= wallet.is_loscat %></td>
        <td><%= link_to 'Show', wallet %></td>
        <td><%= link_to 'Edit', edit_wallet_path(wallet) %></td>
        <td><%= link_to 'Destroy', wallet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<p>
  <%= link_to 'JPYお財布追加', add_wallet_path(@wallets.where(currency_type: :jpy).first), {class: "btn btn-default"} %> |
  <%= link_to 'New Wallet', new_wallet_path %>
</p>